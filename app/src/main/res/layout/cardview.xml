<LinearLayout
    android:id="@+id/card_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardCornerRadius="@dimen/card_additional_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="match_parent"
                android:src="@drawable/ic_pemira"
                android:layout_height="@dimen/additional_cover_height"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_trans_gradient"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txt_capres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="afawfwaf"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_cawapres"
                    android:layout_width="match_parent"
                    android:text="awfwaf"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>