<LinearLayout
    android:id="@+id/card_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    xmlns:app="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:cardElevation="16dp"
        card_view:cardCornerRadius="@dimen/card_additional_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="match_parent"
                android:src="@mipmap/ic_user"
                android:layout_height="@dimen/additional_cover_height"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="afawfwaf"
                android:layout_below="@id/img_avatar"
                android:paddingLeft="@dimen/additional_title_padding"
                android:paddingRight="@dimen/additional_title_padding"
                android:paddingTop="@dimen/additional_title_padding"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_nim"
                android:layout_width="match_parent"
                android:text="awfwaf"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name"
                android:paddingBottom="@dimen/additional_padding_bottom"
                android:paddingLeft="@dimen/additional_title_padding"
                android:paddingRight="@dimen/additional_title_padding"
                android:layout_marginBottom="@dimen/additional_title_padding"
                android:textSize="12sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>